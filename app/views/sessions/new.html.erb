<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
  <h1 class="text-2xl font-bold mb-6 text-center">Login</h1>

  <%= form_with url: login_path, data: { turbo: false } do %>
    <div class="mb-4">
      <%= label_tag :email, nil, class: "block text-sm font-medium" %>
      <%= email_field_tag :email, nil,
            class: "w-full mt-1 p-2 border rounded focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-6">
      <%= label_tag :password, nil, class: "block text-sm font-medium" %>
      <%= password_field_tag :password, nil,
            class: "w-full mt-1 p-2 border rounded focus:ring focus:ring-blue-200" %>
    </div>

    <%= submit_tag "Login",
          class: "w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700" %>
  <% end %>

  <p class="mt-4 text-center text-sm">
    Donâ€™t have an account?
    <%= link_to "Register", new_user_path, class: "text-blue-600 hover:underline" %>
  </p>
</div>
