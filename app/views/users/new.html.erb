<div class="max-w-md mx-auto">
  <div class="bg-white rounded-xl shadow-sm border p-8">
    <h2 class="text-2xl font-bold mb-6 text-center">Create your account</h2>

    <% if @user.errors.any? %>
      <div class="mb-6 rounded-md border border-red-200 bg-red-50 p-4">
        <h3 class="mb-2 font-medium text-red-800">
          Please fix the following errors:
        </h3>
        <ul class="list-disc list-inside text-sm text-red-700">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user do |f| %>
      <div class="mb-4">
        <%= f.label :name, class: "block text-sm font-medium mb-1" %>
        <%= f.text_field :name,
          class: "w-full rounded-md border-gray-300 focus:ring-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium mb-1" %>
        <%= f.email_field :email,
          class: "w-full rounded-md border-gray-300 focus:ring-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium mb-1" %>
        <%= f.password_field :password,
          class: "w-full rounded-md border-gray-300 focus:ring-blue-500" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-sm font-medium mb-1" %>
        <%= f.password_field :password_confirmation,
          class: "w-full rounded-md border-gray-300 focus:ring-blue-500" %>
      </div>

      <%= f.submit "Create account",
        class: "w-full rounded-md bg-green-600 py-2 text-white font-medium hover:bg-green-700 transition" %>
    <% end %>
  </div>
</div>
